{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"]
}
